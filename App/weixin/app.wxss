@import "assets/ionicons.wxss";

.main {
  margin: 5px;
}

.car {
  color: #ff8900;
}

.label-md {
  margin: 13px 8px 13px 0;
}

.btn-area {
  margin: 5 10px;
}

.btn-area button {
  margin: 5px;
}

.item-md {
  color: #000;
  box-shadow: none;
  transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background-color: #fff;
}

.input-wrapper {
  display: -webkit-flex;
  display: -ms-flexbox;
  overflow: hidden;
  border-bottom-color: #32db64;
  box-shadow: inset 0 -1px 0 0 #dedede;
}

.ion-label {
  overflow: hidden;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  margin: 10px;
  font-size: inherit;
  white-space: nowrap;
}

.ion-icon {
  font-size: 40px;
}

.text-input {
  display: inline-block;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  border: 1;
  border-radius: 0;
  background: 0 0;
  margin: 13px 8px;
  padding: 0;
}

ion-row {
  background-color: #f9fafb;
  display: flex;
}

ion-col {
  background-color: #fff;
  border-radius: 2px;
  text-align: -webkit-center;
  margin: 1px;
  display: block;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding: 5px;
  width: 100%;
}

ion-col div image {
  height: 50px;
  width: 50px;
  margin: 13px 0;
  padding: 0;
}

ion-col button {
  color: #066;
  margin: 5px;
  background-color: #fff;
}

button {
  border: 0;
  font-family: inherit;
  font-style: inherit;
  font-variant: inherit;
  line-height: 1;
  text-transform: none;
}

button ion-icon{
  font-size: 20px;
  line-height: 25px;
}
button span{
  font-size: 13px;
  line-height: 25px;
}


ion-avatar img, ion-item-group, ion-thumbnail img {
  display: block;
}

.item-divider-md-light, .item-md-light {
  color: #000;
  background-color: #f4f4f4;
}

ion-item-divider {
  z-index: 100;
  display: flex;
  box-shadow: inset 0 -1px 0 0 #dedede;
  width: 100%;
  min-height: 30px;
}

ion-item-divider ion-label {
  padding: 0px 10px;
  font-size: 14px;
  font-weight: bold;
}

ion-item .input-wrapper {
  margin: 0px 0px 0px 10px;
}

ion-label {
  margin: 13px 8px 13px 0;
  font-size: 14px;
}
