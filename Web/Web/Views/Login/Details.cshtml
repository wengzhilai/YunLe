@model ProInterface.Models.LOGIN
@{
    ViewBag.Title = "编辑登录";
}

<div id="myPnl" style="display: none"></div>
@using (Ajax.BeginForm(new AjaxOptions
{
    UpdateTargetId = "myPnl",
    Confirm = "确定要提交吗",
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure",
    OnComplete = "OnComplete"
}))
{
    @Html.HiddenFor(m => m.ID)
    <table style="table-layout: fixed; width: 100%">
        <tr>
            <td colspan="2">
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.LOGIN_NAME)</span>
                    @Html.TextBoxFor(m => m.LOGIN_NAME, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LOGIN_NAME)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.PHONE_NO)</span>
                    @Html.TextBoxFor(m => m.PHONE_NO, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PHONE_NO)
                </div>
            </td>
            <td>
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.EMAIL_ADDR)</span>
                    @Html.TextBoxFor(m => m.EMAIL_ADDR, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EMAIL_ADDR)
                </div>
            </td>

        </tr>
        <tr>
            <td>
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.IS_LOCKED)</span>
                    @Html.TextBoxFor(m => m.IS_LOCKED, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.IS_LOCKED)
                </div>
            </td>
            <td>
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.LOCKED_REASON)</span>
                    @Html.TextBoxFor(m => m.LOCKED_REASON, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LOCKED_REASON)
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="input-group" style="width: 100%;">
                    <span class="input-group-addon" data-size="4">@Html.LabelFor(m => m.AllOauthStr)</span>
                    <div class="form-control">
                        @Html.CheckBoxListFor(m => m.AllOauthStr, ViewData["allOauth"] as IList<SelectListItem>)
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <div style="text-align: center; padding: 10px; display: none;">
        <a class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="onSubmit()">保存</a>
        <a class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" onclick="parent.CloseWin();">取消</a>
        <input style="width: 60px; display: none; margin-right: 20px;" type="submit" value="保存" />
    </div> 
}
<script type="text/javascript" src="~/Scripts_Page/FunBase.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
